<div class="col-xs-10 col-xs-offset-1">
  <section id="repositories">
    <h2>My Repositories</h2>
    <table class="table table-striped table-hover table-condensed">
      <thead>
        <tr>
          <th class="text-center">Followers</th>
          <th class="text-center">#ID</th>
          <th>Name</th>
          <th>Decription</th>
        </tr>
      </thead>
      <tbody>
        {{#each privateRepos}}
          <tr>
            <td class="text-center"> <span class="badge">{{ this.stargazers_count }}</span></td>
            <td class="text-center"> {{ this.id }} </td>
            <td> <a href="{{ this.html_url}}">{{ this.name }}</a> </td>
            <td> {{ this.description }} </td>
            <td>
              <a href="#" class="publish btn btn-sm btn-success"
                 data-id    = "{{ this.id }}"
                 data-name  = "{{ this.name }}"
                 data-desc  = "{{ this.description }}"
                 data-url   = "{{ this.html_url }}"
                 data-stars = "{{ this.stargazers_count }}">
                     Publish
              </a>
            </td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  </section>
</div>